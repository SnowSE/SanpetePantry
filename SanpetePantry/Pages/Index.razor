@page "/"

<div class="video-container">
    <video autoplay muted loop id="video-bg">
        <source src="/videos/HomePage.mp4" type="video/mp4">
        Your browser does not support the video tag.
    </video>
    <div class="content">
        <h1 class="main-title">SANPETE PANTRY</h1>
        <p class="main-subtitle">Sanpete Takes Care Of Its Own</p>
    </div>
</div>

<div style="margin: auto;" class="container">

    <div class="container">
        <div class="grid">
            <div class="row">
                <div class="col-lg-5">
                    <img class="img-fluid" src="/img/AppleLogo_Main.svg" alt="Logo and Name" />
                </div>
                <div class="col-lg d-flex justify-content-center align-items-center">
                    <div style="font-family: Gabriola;">
                        <h1 class="fw-bold">No hunger in Sanpete County, Utah</h1>
                        <h3>That's our mission and we are working hard to achieve it!</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="p-2">
            <div class="row">
                <div class="col-4">
                    <div class="row p-1">
                        <img class="img-fluid" src="/img/GreatPictureVioletShirt.jpg" alt="Smiling woman next to shelve" />
                    </div>
                </div>
                <div class="col-4">
                    <div class="grid">
                        <div class="row p-1">
                            <img class="img-fluid" src="/img/VolunteersMovingCart.JPG" alt="People moving cart" />
                        </div>
                        <div class="row p-1">
                            <img class="img-fluid" src="/img/LadiesSmiling.JPG" alt="Group of smiling ladies" />
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    <div class="grid">
                        <div class="row p-1">
                            <img class="img-fluid" src="/img/FoodDrive2.webp" alt="Food Drive 2" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="py-5">
        <h2 class="text-center" style="font-family: Gabriola;">We are Sanpete County's Food Pantry</h2>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-lg">
                <div class="text-center">
                    <h3 style="font-family: 'Franklin Gothic Medium';" class="fw-bold">Our Mission Statement</h3>
                    <p class="fs-5">
                        Food security through providing timely access to food, warehousing food for difficult times, and building food production capabilities in our local communities.
                    </p>
                </div>
            </div>
            <div class="col-lg">
                <h3 style="font-family: 'Franklin Gothic Medium';" class="fw-bold text-center">The Cities We Serve</h3>
                <div class="text-center fs-5">
                    Axtell, Centerfield, Chester, Ephraim, Fairview, Fayette, Fountain Green, Freedom, Gunnison, Indianola, Manti, Mayfield,
                    Milburn, Moroni, Mt. Pleasant, Spring City, Sterling, and Wales.
                </div>
            </div>
        </div>
    </div>

    <div class="py-5">
        <h2 class="text-center py-5" style="font-family: Gabriola;">Learn About Our Donation Campaign</h2>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-lg">
                <div class="d-flex justify-content-center align-items-center">
                    <img src="/img/3andMe.png" alt="3&ME Logo" />
                </div>
            </div>
            <div class="col-lg">
                <div class="d-flex justify-content-center align-items-center">
                    <iframe src="https://www.facebook.com/plugins/video.php?height=314&href=https%3A%2F%2Fwww.facebook.com%2FSanpetePantry%2Fvideos%2F435094167899713%2F&show_text=false&width=560&t=0"
                        width="560" height="314" style="border:none;overflow:hidden" scrolling="no" frameborder="0" allow="autoplay;
                        clipboard-write; encrypted-media; picture-in-picture; web-share" allowFullScreen="true"></iframe>
                </div>
            </div>
        </div>
    </div>
</div>